# =============================================================================
# BIZBOT.STORE - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control
# =============================================================================

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
API_BASE_URL=https://bizbot-api.onrender.com
FRONTEND_URL=https://bizbot.store

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=your-super-secret-jwt-key-here
DEMO_API_KEY=demo-key-12345

# -----------------------------------------------------------------------------
# AI SERVICE (ANTHROPIC)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# -----------------------------------------------------------------------------
# PAYMENT PROCESSING (STRIPE)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# -----------------------------------------------------------------------------
# EMAIL SERVICE (SMTP)
# -----------------------------------------------------------------------------
SMTP_SERVER=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password
SENDER_EMAIL=no-reply@bizbot.store

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
CORS_ORIGINS=https://bizbot.store,http://localhost:3000
RATE_LIMIT_ENABLED=true
FREE_TRIAL_QUERIES=3

# -----------------------------------------------------------------------------
# DEPLOYMENT SETTINGS
# -----------------------------------------------------------------------------
ENVIRONMENT=production
DEBUG=false
